# Environment variables for Create React App
# Copy this file to .env and configure the values

# ===========================================
# API Configuration
# ===========================================

# Set to false to use real NY Times API, true for mock data
REACT_APP_MOCK_API=true

# Simulated API delay in milliseconds (for mock mode)
REACT_APP_API_DELAY_MS=1000

# NY Times API key - get from https://developer.nytimes.com/
REACT_APP_NY_TIMES_API_KEY=your_api_key_here

# NY Times API base URL
REACT_APP_API_BASE_URL=https://api.nytimes.com/svc

# ===========================================
# Proxy Configuration
# ===========================================

# Enable proxy in development mode
REACT_APP_PROXY_ENABLED=true

# CORS proxy URL (for production if needed)
REACT_APP_CORS_PROXY_URL=https://cors-anywhere.herokuapp.com

# Use local development proxy
REACT_APP_USE_LOCAL_PROXY=true

# ===========================================
# Development Settings
# ===========================================

# Enable debug logging
REACT_APP_DEBUG_MODE=false

# Log level (error, warn, info, debug)
REACT_APP_LOG_LEVEL=info

# Enable performance monitoring
REACT_APP_PERFORMANCE_MONITORING=false

# ===========================================
# Build Configuration
# ===========================================

# Generate source maps in production (set to false for faster builds)
GENERATE_SOURCEMAP=true

# Disable ESLint warnings in build
ESLINT_NO_DEV_ERRORS=false

# Skip preflight check
SKIP_PREFLIGHT_CHECK=false

# ===========================================
# Analytics & Monitoring (Optional)
# ===========================================

# Google Analytics tracking ID
# REACT_APP_GA_TRACKING_ID=UA-XXXXXXXXX-X

# Sentry DSN for error tracking
# REACT_APP_SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# ===========================================
# Feature Flags (Optional)
# ===========================================

# Enable experimental features
REACT_APP_ENABLE_EXPERIMENTAL_FEATURES=false

# Enable service worker
REACT_APP_ENABLE_SERVICE_WORKER=false

# Enable PWA features
REACT_APP_ENABLE_PWA=false
